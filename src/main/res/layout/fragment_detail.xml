<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ListActivity"
        android:background="?android:attr/colorBackground"
        android:clickable="true"
        tools:visibility="visible">


        <ImageView
            android:id="@+id/coinLogo2"
            android:layout_width="190dp"
            android:layout_height="132dp"
            android:layout_alignParentTop="true"
            android:layout_margin="64dp"
            android:foregroundGravity="center"
            android:minHeight="200dp"
            android:padding="16dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/coinName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coinLogo2"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coinLogo2"
            tools:text="Coin Name" />

        <TextView
            android:id="@+id/coinFiatCurrency2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coinName2"
            android:layout_centerHorizontal="true"
            android:text="Coin Fiat Currency"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coinName2" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="412dp"
            android:layout_height="483dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coinFiatCurrency2" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/lineChart"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/lineChart">

            <EditText
                android:id="@+id/requestValue"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:hint="DeÄŸer Girin"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switchConvert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#070101" />

            <TextView
                android:id="@+id/resultValue"
                android:layout_width="160sp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
